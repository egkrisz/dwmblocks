#!/bin/sh

case $BUTTON in
    1) setsid xfce4-terminal -e pavucontrol ;;
esac

# Prints the current volume or ðŸ”‡ if muted.
[ $(pamixer --get-mute) = true ] && echo ïš© && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ï€¨"
elif [ "$vol" -lt "30" ]; then
	icon="ï€¦"
else
	icon="ï€§"
fi

echo "$icon $vol%"
